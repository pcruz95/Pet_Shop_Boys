<div id="home-banner">
  <div id="home-search">
    <div class="row">
      <div class="col-sm-12">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title d-flex justify-content-center">BOOK PETS</h2>
              <div class="form-row">

                <div class="form-group col-md-6">
                 <%= form_tag pets_path, method: :get do %>
                    <%= text_field_tag :query,
                      params[:query],
                      class: "form-control",
                      placeholder: "Put the location or pet type"
                    %>
                    <%= submit_tag "Search", class: "btn btn-primary" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container" id="pets-scrolled-down">
  <%= render 'pets/index_scrolldown' %>
</div>

