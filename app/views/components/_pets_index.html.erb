<!-- <div class="container mb-5"> -->
  <%# if policy(Pet).create? %>
    <%#= link_to "+ New Pet", new_pet_path, class: 'btn btn-primary mb-3' %>
  <%# end %>



  <div class="container">
      <h1 class="container d-flex justify-content-center">TOP 5 OF THIS WEEK</h1>
     <div class="container" id="container-top-5">
      <% @pets.sort_by { |pet| - pet.average_rating }.first(5).each do |pet| %>
      <div class="my-col col-sm-12 col-md-6 col-lg-4">
        <div class="d-flex align-items-center m-1">
        <%= link_to pet_path(pet) do %>
          <div class="card" id="pet_card">
            <%= cl_image_tag pet.photo, class: "card-picture" %>
          <div class="card-body">
          <div class="card-title" id="pet_card_title">
            <h5><%= pet.name.upcase! %></h5>
              <p><%= "⭐️" * pet.average_rating %></p>
          </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
</div>

<div class="d-flex">
  <div class="left vh-100">
    <div class="row">
      <% @pets.each do |pet| %>
      <div class="my-col col-sm-12 col-md-6 col-lg-4">
        <div class="d-flex align-items-center m-1">
          <div class="card" id="pet_card">
            <%= cl_image_tag pet.photo, class: "card-picture"  %>
            <div class="card-body">
              <div class="card-title" id="pet_card_title">
                <h5><%= pet.name %></h5>
                <p><%= pet.price %>€</p>
              </div>
              <p><%= "⭐️" * pet.average_rating %></p>
              <p><%= pet.address %></p>
              <%= link_to 'Pet Details', pet_path(pet), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>

      <% end %>
    </div>
  </div>

  <div class="right vh-100">
      <div
      id="map"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      class="index_map_style"></div>
  </div>
</div>







