<h3 class="mt-4">Reviews of <%= @pet.name %>:</h3>

<h5 class="mb-3">Average rating: <%= "⭐️" * @pet.average_rating %></h5>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Rating</th>
      <th scope="col">Comment</th>
    </tr>
  </thead>
  <tbody>

    <% @pet.reviews.each do |review| %>

      <tr>
        <td><%= "⭐️" * review.rating %></td>
        <td><%= review.content %></td>
      </tr>

    <% end %>

  </tbody>
</table>
