<% @pets.each do |pet| %>
  <div class="card card_pet">
    <%= link_to pet_path(pet) do %>
      <%= cl_image_tag pet.photo, class: "card-img-top pet-img" %>
    <% end %>

    <div class="card-body p-2">

      <div class="card-text">
        <p class="mb-0 font-weight-bold"><%= pet.name %></p>

        <div class="pet-info">
          <p><%= pet.price %>â‚¬</p>
          <div><%= render 'components/star', pet: pet %></div>
        </div>

      </div>
    </div>
  </div>
<% end %>

