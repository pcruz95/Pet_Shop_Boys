<div class="container">
  <div class="jumbotron">
    <%= cl_image_tag @pet.photo, height: 250, width: 250, crop: :fill%>
    <h1 class="display-4"><%= @pet.name %></h1>
    <h3><%= @pet.address %></h3>
    <h5><%= @pet.animal_type %></h5>
    <h5><%= @pet.price %>â‚¬</h5>
    <p class="lead"><%= @pet.description %></p>
    <hr class="my-4">


    <%= link_to 'Book this pet', new_pet_booking_path(@pet), class: 'btn btn-primary' %>
  </div>

  <% if policy(@pet).edit? %>
    <%= link_to 'Edit Your Pet', edit_pet_path(@pet) %>
  <% end %>

  <% if policy(@pet).destroy? %>
    <%= link_to 'KILL Your Pet', pet_path(@pet), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</div>
