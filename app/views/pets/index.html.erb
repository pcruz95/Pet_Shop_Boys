<% if policy(Pet).create? %>
  <%= link_to "+ New Pet", new_pet_path %>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <% @pets.each do |pet| %>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="d-flex align-items-center m-1">
        <div class="card" id="pet_card" style="width: 18rem;">
          <%= cl_image_tag pet.photo, class: "card-picture"  %>
          <div class="card-body">
            <div class="card-title" id="pet_card_title">
              <h5><%= pet.name %></h5>
              <p><%= pet.price %>â‚¬</p>
            </div>
            <h6><%= pet.address %></h6>
            <%= link_to 'Pet Details', pet_path(pet), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

</div>

