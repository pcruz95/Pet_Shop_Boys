<%= simple_form_for @pet do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :price %>
    <%= f.input :animal_type %>
    <%= f.input :photo, as: :file %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn" %>
    <%= link_to 'Back to list', pets_path %>
  </div>
<% end %>
